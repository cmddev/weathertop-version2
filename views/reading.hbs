{{> menu}}

<form class="ui stacked segment form" action="/reading/{{reading.id}}/updatereading/{{reading.id}}" method="POST">
  <div class="four fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="Code" type="text" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder=000.0 type="text" name="temperature" value="{{reading.temperature}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00" type="number" name="duration" value="{{reading.windSpeed}}">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="00" type="number" name="duration" value="{{reading.windDirection}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="00" type="number" name="duration" value="{{reading.pressure}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Reading</button>
  <button class="ui green submit button">Back</button>
</form>
