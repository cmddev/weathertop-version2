<table class="ui table">
  <thead>
  <tr>
    <th>Date/Time</th>
    <th>Code</th>
    <th>Temperature</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
    <th>Pressure</th>
    <th>User Actions</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each station.readings}}
    <tr>
      <td>
        {{date}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temperature}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href="/reading/{{../station.id}}/updatereading/{{id}}" class="ui icon button">
          <i class="pencil alternate icon"></i>
        </a>
        <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
          <i class="icon red trash"></i>
        </a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
