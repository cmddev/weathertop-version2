{{> welcomemenu id='login' }}

<form class="ui stacked segment form" action="/authenticate" method="POST">
  <h3 class="ui header">Log-in to your Weather Top Account</h3>
  <div class="field">
    <label>Email</label> <input placeholder="Email" name="email" required>
  </div>
  <div class="field">
    <label>Password</label> <input type="password"  name="password" required>
  </div>
  <button class="ui blue submit button">Login</button>
</form>
