{{> menu id ="myprofile"}}

<div class = "ui one column grid basic middle aligned segment">
  <form class="ui stacked segment form" action="/updateuser" method="POST">
    <h3 class="ui header">Update your account details</h3>
    <div class="two fields">
      <div class="field">
        <label>First Name</label>
        <input placeholder="First Name" type="text"  name="firstName" required>
      </div>
      <div class="field">
        <label>Last Name</label>
        <input placeholder="Last Name" type="text"  name="lastName" required>
      </div>
    </div>
    <div class="field">
      <label>Email</label>
      <input placeholder="Email" type="text" name="email" required>
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password" required>
    </div>
    <button class="ui blue submit button">Update Account</button>
  </form>

</div>
